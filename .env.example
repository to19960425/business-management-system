# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=business_management
DB_USERNAME=bmuser
DB_PASSWORD=bmpass
DB_ROOT_PASSWORD=rootpass

# Application Configuration
APP_NAME=Business Management System
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Backend Configuration
BACKEND_HOST=backend
BACKEND_PORT=8000
BACKEND_URL=http://localhost:8000

# Frontend Configuration
FRONTEND_HOST=frontend
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Email Configuration
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@businessmanagement.local
MAIL_FROM_NAME="${APP_NAME}"

# Redis Configuration (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# File Upload Configuration
MAX_FILE_SIZE=10M
UPLOAD_PATH=/uploads

# Timezone
APP_TIMEZONE=Asia/Tokyo

# Locale
APP_LOCALE=ja_JP
APP_DEFAULT_LOCALE=ja_JP

# Logging
LOG_LEVEL=debug
LOG_PATH=/var/log/app.log

# Security
SECURITY_SALT=your-security-salt-here
ENCRYPTION_KEY=your-encryption-key-here

# Development Tools
PHPMYADMIN_PORT=8080
MAILHOG_PORT=8025

# Docker Network
DOCKER_NETWORK=business-management-network